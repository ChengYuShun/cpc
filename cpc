# 获取文件所在目录
current_dir=`dirname $0`

# 查看 python3 环境
if [ pypy3 ]; then
    alias py='pypy3'
elif [ pypy ]; then
    alias py='pypy'
elif [ python3 ]; then
    alias py='python3'
elif [ python ]; then
    alias py='python'
else
    echo "Please install Python3 to run this script correctly. "
    open "https://www.pypy.org/"
    open "https://python.org"
    exit 0
fi

# 运行
py "${current_dir}/main.py" $*
