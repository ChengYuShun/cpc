# 获取文件所在目录
current_dir=`dirname $0`

# 查看 python3 环境
if command -v pypy3 >/dev/null 2>&1 ; then
    alias py='pypy3'
elif command -v pypy >/dev/null 2>&1 ; then
    alias py='pypy'
elif command -v python3 >/dev/null 2>&1 ; then
    alias py='python3'
elif command -v python >/dev/null 2>&1; then
    alias py='python'
else
    echo "Please install Pypy3.x / CPython3.x before running this script. "
    echo "If you have Python3 in your computer, please check if it is in the PATH"
    open "https://www.pypy.org/"
    open "https://python.org"
    exit 1
fi

# 运行
py "${current_dir}/main.py" $*
